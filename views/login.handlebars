<link rel="stylesheet" href="/styles.css">

<a href="/"><img src="/ghost.png" alt="ghostrunner" class="main_logo"/></a>


<div class="login-page">

  <div class="form">

    <form class="data_form" action="/loginForm" method="post" autocomplete="off">
      <input type="text" name="username" placeholder="Username"/>
      <input type="password" name="password" placeholder="Password"/>
      <button type="submit">Login</button>

      <p class="message">Not registered? <a id="register" href="/register">Create an account</a></p>

    </form>

    <div class="failure">
      {{#if failed}}
      Login failed!
      {{/if}}
    </div>

  </div>

</div>
